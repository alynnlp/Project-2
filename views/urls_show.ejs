<!-- display a singl URLs and its SHORTENED form after submitted
shortened URLs with EDIT BUTTON to change a new LONGURLs destination -->
<!DOCTYPE html>
<html lang="en">
  <head>
  </head>

  <body>
    <%- include("./partials/_header") %>
    <center>
      <ul>
        <!-- from templateVars > shortURL is a key and = a VALUE of this key-->
        <div style="margin: 50px 0 0 0; font-size: 20px; font-weight: bold">
          ShortURL :  <%= shortURL %>
        </div>
        <div style="font-size: 20px; font-weight: bold">
          Current LongURL : <%= longURL %>
        </div>
        <form method="POST" action="/urls/<%=shortURL%>">
          <input type="text" name="update" placeholder="http://" style="width: 300px;height: 20px">
          <button style="color: #fff; font-size: 12px; margin: 10px 0 0 20px; padding: 5px; background-color:#F08080;border-radius:10px">UPDATE</button>
        </form>
      </ul>
    </center>
  </body>
</html>
